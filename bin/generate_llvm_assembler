## ===========================================================================
## Subroutine getName
## ===========================================================================
# Description: returns the name of a new register
#
# Inputs: none
# 
# Outputs: none
#
# Return Value: per description
#
# ============================================================================
sub getName
{{
   #my( )= @_;
   my( $ret_val )= "%" . $reg_num;
   $reg_num++;
   return $ret_val;
}}

## ===========================================================================
## Subroutine getPrevName
## ===========================================================================
# Description: gets the name of the previous (most recently issued) register
#
# Inputs: none
# 
# Outputs: none
#
# Return Value: per description
#
# ============================================================================
sub getPrevName
{{
   #my( )= @_;
   return "%" . $reg_num;
}}

## ===========================================================================
## Subroutine getRecentName
## ===========================================================================
# Description: gets the name of a recently issued register
#
# Inputs: none
# 
# Outputs: none
#
# Return Value: per description
#
# ============================================================================
sub getRecentName
{{
   #my( )= @_;
   my( $limit )= 10;
   if ( $reg_num < $limit )  { $limit= $reg_num; };
   my( $rr )= $reg_num- int( rand()*$limit );
   return "%" . $rr;
}}

